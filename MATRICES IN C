MATRIX ADDITION:-

#include<stdio.h>
int main()
{
 int a[2][2]={1,2,3,4};
 int b[2][2]={5,6,7,8};
 int c[2][2]={0,0,0,0};
 int i,j;
 for(i=0;i<2;i++)
 {
 for(j=0;j<2;j++)
 {
 c[i][j]=a[i][j]+b[i][j];
 }
 }
 for(i=0;i<2;i++)
 {
 for(j=0;j<2;j++)
 {
printf("%d\t",c[i][j]);
}
 printf("\n");
}
 return 0;
}


OUTPUT:-
6	8	
10	12	
*********************************************************

MATRIX SUBTRACTION:-

#include<stdio.h>
int main()
{
 int a[2][2]={5,6,7,8};
 int b[2][2]={1,2,3,4};
 int c[2][2]={0,0,0,0};
 int i,j;
 for(i=0;i<2;i++)
 {
  for(j=0;j<2;j++)
{
 c[i][j]=a[i][j]-b[i][j];
 }
 }
 for(i=0;i<2;i++)
{
 for(j=0;j<2;j++)
 {
  printf("%d\t",c[i][j]);
 }
 printf("\n");
}
return 0;
}

OUTPUT:-
4	4	
4	4	
*****************************************************************

MATRIX MULTIPLICATION:-

#include<stdio.h>
int main()
{
 int a[2][2]={1,2,3,4};
 int b[2][2]={5,6,7,8};
 int c[2][2]={0,0,0,0};
 int i,j,k;
 for(i=0;i<2;i++)
 {
 for(j=0;j<2;j++)
 {
 for(k=0;k<2;k++)
{
 c[i][j]+=a[i][k]*b[k][j];
}
}
}
 for(i=0;i<2;i++)
 {
for(j=0;j<2;j++)
{
 printf("%d\t",c[i][j]);
 }
printf("\n");
 }
 return 0;
}

OUTPUT:-
19	22	
43	50	
***************************************************************

MATRIX TRANSPOSE:-

#include<stdio.h>
int main()
{
 int a[2][2]={1,2,3,4};
 int t[2][2]={0,0,0,0};
 int i,j;
 for(i=0;i<2;i++)
 {
    for(j=0;j<2;j++)
 {
 t[j][i]=a[i][j];
 }
 }
 for(i=0;i<2;i++)
 {
 for(j=0;j<2;j++)
{
printf("%d\t",t[i][j]);
 }
 printf("\n");
 }
 return 0;
}

OUTPUT:-
1	3	
2	4	
******************************************************************************

SUM OF DIAGONAL ELEMENTS:-

#include<stdio.h>
int main()
{
 int a[3][3]={1,2,3,4,5,6,7,8,9};
 int i,j,sum=0;
 for(i=0;i<3;i++)
 {
for(j=0;j<3;j++)
{
printf("%d\t",a[i][j]);
}
 printf("\n");
 }
 for(i=0;i<3;i++)
 {
 for(j=0;j<3;j++)
 {
if(i==j)
 {
 printf(" diagonal elements=%d\n",a[i][j]);
}
 }
 }
 for(i=0;i<3;i++)
 {
 sum+=a[i][i];
 }
 printf("sum of diagonal elements=%d",sum);
 return 0;
}

OUTPUT:-
1	2	3	
4	5	6	
7	8	9	
 diagonal elements=1
 diagonal elements=5
 diagonal elements=9
sum of diagonal elements=15
*****************************************************************************************

ORTHOGONAL MATRIX:-

#include<stdio.h>
int main()
{
 int a[3][3]={1,0,0,0,1,0,0,0,1};
 int i,j,orthogonal=1;
 for(i=0;i<3;i++)
 {
for(j=0;j<3;j++)
{
if(i!=j&&a[i][j]!=0)
{
  orthogonal=0;
  break;
 }
 if(i==j&&a[i][j]!=1)
 {
  orthogonal=0;
break;
  }
}
}
 if(orthogonal)
 {
 printf("The given matrix is orthogonal matrix");
 }
 else
 {
 printf("The given matrix is not orthogonal matrix");
 }
 return 0;
}

OUTPUT:-
The given matrix is orthogonal matrix
********************************************************************************

SUM OF MATRIX ELEMENTS AND AVERAGE:-

#include<stdio.h>
int main()
{
 int a[3][3]={1,2,3,4,5,6,7,8,9};
 int i,j,avg,sum=0;
 for(i=0;i<3;i++)
 {
 for(j=0;j<3;j++)

 {
 printf("%d\t",a[i][j]);
 }
 printf("\n");
 }
 for(i=0;i<3;i++)
 {
 for(j=0;j<3;j++)
 {
 sum+=a[i][j];
 }
 }
 avg=sum/9;
 printf("Sum of elements in matrix=%d\n",sum);
 printf("Average of elements in matrix=%d",avg);
 return 0;
}

OUTPUT:-
1	2	3	
4	5	6	
7	8	9	
Sum of elements in matrix=45
Average of elements in matrix=5
****************************************************************************************
