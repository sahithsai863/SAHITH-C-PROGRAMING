#include <stdio.h>

int main()
{
    int n, sum = 0;
    float average;
    printf("Enter a positive integer: ");
    scanf("%d", &n);
    if (n <= 0)
    {
        printf("Please enter a positive integer.\n");
        return 1;
    }
    sum = (n * (n + 1)) / 2;
    average = (float)sum / n;
    printf("Sum of first %d natural numbers: %d\n", n, sum);
    printf("Average: %.2f\n", average);

    return 0;
}
