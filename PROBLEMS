#include<stdio.h>
int main()
{
    float initial_balance,deposit,withdraw,balance,final_balance;
    printf("Initial Balance:",initial_balance);
    scanf("%f",&initial_balance);
    printf("Deposit:",deposit);
    scanf("%f",&deposit);
    balance=initial_balance+deposit;
    printf("Balance=%.2f\n",balance);
    printf("Withdraw :",withdraw);
    scanf("%f",&withdraw);
    final_balance=balance-withdraw;
    printf("Final Balance =%.2f",final_balance);
    return 0;
}

OUTPUT:-

    Initial Balance:5000
Deposit:2000
Balance=7000.00
Withdraw :1500
Final Balance =5500.00
