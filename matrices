MATRIX ADDITION:-


#include<stdio.h>
int main()
{
 int a[2][2]={1,2,3,4};
 int b[2][2]={5,6,7,8};
 int c[2][2]={0,0,0,0};
 int i,j;
 for(i=0;i<2;i++)
 {
 	for(j=0;j<2;j++)
 	{
 		c[i][j]=a[i][j]+b[i][j];
	 }
 }
 for(i=0;i<2;i++)
	 {
		 for(j=0;j<2;j++)
 		{
			 printf("%d\t",c[i][j]);
		 }
 		printf("\n");
	 }
 return 0;
}


OUTPUT:-
6	8	
10	12	


MATRIX SUBTRACTION:-


#include<stdio.h>
int main()
{
 int a[2][2]={5,6,7,8};
 int b[2][2]={1,2,3,4};
 int c[2][2]={0,0,0,0};
 int i,j;
 for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
            c[i][j]=a[i][j]-b[i][j];
        }
    }
 for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
            printf("%d\t",c[i][j]);
        }
        printf("\n");
    }
return 0;
}
OUTPUT:-




#include<stdio.h>
int main()
{
 int a[2][2]={1,2,3,4};
 int b[2][2]={5,6,7,8};
 int c[2][2]={0,0,0,0};
 int i,j,k;
 for(i=0;i<2;i++)
 {
    for(j=0;j<2;j++)
     {
        for(k=0;k<2;k++)
            {
            c[i][j]+=a[i][k]*b[k][j];
            }
    }
}
 for(i=0;i<2;i++)
 {
    for(j=0;j<2;j++)
    {
    printf("%d\t",c[i][j]);
    }
    printf("\n");
 }
 return 0;
}



#include<stdio.h>
int main()
{
 int a[2][2]={1,2,3,4};
 int t[2][2]={0,0,0,0};
 int i,j;
 for(i=0;i<2;i++)
 {
    for(j=0;j<2;j++)
        {
            t[j][i]=a[i][j];
        }
 }
 for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
        printf("%d\t",t[i][j]);
        }
        printf("\n");
    }
 return 0;
}


#include<stdio.h>
int main()
{
 int a[3][3]={1,2,3,4,5,6,7,8,9};
 int i,j,sum=0;
 for(i=0;i<3;i++)
 {
    for(j=0;j<3;j++)
    {
    printf("%d\t",a[i][j]);
    }
    printf("\n");
 }
 for(i=0;i<3;i++)
 {
    for(j=0;j<3;j++)
    {
    if(i==j)
    {
    printf(" diagonal elements=%d\n",a[i][j]);
    }
    }
 }
 for(i=0;i<3;i++)
 {
    sum+=a[i][i];
 }
 printf("sum of diagonal elements=%d",sum);
 return 0;
}



#include<stdio.h>
int main()
{
 int a[3][3]={1,0,0,0,1,0,0,0,1};
 int i,j,orthogonal=1;
 for(i=0;i<3;i++)
 {
    for(j=0;j<3;j++)
        {
            if(i!=j&&a[i][j]!=0)
            {
                orthogonal=0;
                break;
            }
            if(i==j&&a[i][j]!=1)
            {
                orthogonal=0;
                break;
            }
        }
}
 if(orthogonal)
 {
 printf("The given matrix is orthogonal matrix");
 }
 else
 {
 printf("The given matrix is not orthogonal matrix");
 }
 return 0;
}



#include<stdio.h>
int main()
{
 int a[3][3]={1,2,3,4,5,6,7,8,9};
 int i,j,avg,sum=0;
 for(i=0;i<3;i++)
 {
 for(j=0;j<3;j++)

 {
 printf("%d\t",a[i][j]);
 }
 printf("\n");
 }
 for(i=0;i<3;i++)
 {
 for(j=0;j<3;j++)
 {
 sum+=a[i][j];
 }
 }
 avg=sum/9;
 printf("Sum of elements in matrix=%d\n",sum);
 printf("Average of elements in matrix=%d",avg);
 return 0;
}
